<div class="header-01">categories</div>
<div class="block-container-02">
    <form action="<?php echo $this->url(); ?>" method="post" class="form-02">
        <table cellspacing="0" cellpadding="0" width="100%" class="table-01">
            <tr>
                <th colspan="6">Select categories:</th>
            </tr>
            <?php $categoriesCount = count($this->data['categories']); $i = 0; ?>
            <?php if($categoriesCount > 0) : ?>
                <?php while($i < $categoriesCount) : ?>
