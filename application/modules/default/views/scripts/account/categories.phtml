                                <td width="1%"><input type="checkbox" name="categories[]" value="<?php echo $this->data['categories'][$i]['id']; ?>" <?php if(!empty($this->data['categories'][$i]['id_users_categories'])) : ?>checked="checked"<?php endif; ?> /></td>
                                <td width="32%"><?php echo $this->data['categories'][$i]['description']; ?></td>
                            <?php else : ?>
                                <td width="1%">&nbsp;</td>
                                <td width="32%">&nbsp;</td>
                            <?php endif; ?>
                        <?php endfor; ?>
                    </tr>
                <?php endwhile; ?>
            <?php endif; ?>
        </table>
        <div class="submit">
            <input type="image" src="/public/images/buttons/002.gif" />
        </div>
    </form>
</div>